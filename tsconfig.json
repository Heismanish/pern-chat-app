{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "outDir": "./server/dist",
	  "rootDir": "./",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "resolveJsonModule": true,
	  "types": ["node"] // Add Node.js global types like 'process'
	},
	"ts-node": {
	  "esm": true
	},
	"include": ["server/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "client"]
  }
  